{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModelRoutingDecision",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decisionId",
    "requestId",
    "selectedModel",
    "tier",
    "justification",
    "estimatedCostCents",
    "withinBudget",
    "createdAt"
  ],
  "properties": {
    "decisionId": { "type": "string", "minLength": 1 },
    "requestId": { "type": "string", "minLength": 1 },
    "selectedModel": { "type": "string", "minLength": 1 },
    "tier": { "type": "string", "enum": ["economy", "standard", "advanced", "frontier"] },
    "justification": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "estimatedCostCents": { "type": "integer", "minimum": 0 },
    "withinBudget": { "type": "boolean" },
    "createdAt": { "type": "string", "format": "date-time" }
  }
}
