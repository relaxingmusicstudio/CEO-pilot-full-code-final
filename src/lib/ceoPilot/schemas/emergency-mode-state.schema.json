{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EmergencyModeState",
  "type": "object",
  "additionalProperties": false,
  "required": ["mode", "reason", "triggeredBy", "createdAt"],
  "properties": {
    "mode": { "type": "string", "enum": ["normal", "constrained", "emergency"] },
    "reason": { "type": "string", "minLength": 1 },
    "triggeredBy": { "type": "string", "enum": ["system", "human", "simulation"] },
    "maxModelTier": { "type": "string", "enum": ["economy", "standard", "advanced", "frontier"] },
    "scheduleNonCritical": { "type": "boolean" },
    "blockHighRisk": { "type": "boolean" },
    "createdAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" }
  }
}
