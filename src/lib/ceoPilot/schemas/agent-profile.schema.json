{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentProfile",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "agentId",
    "displayName",
    "role",
    "scope",
    "maxPermissionTier",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "agentId": { "type": "string", "minLength": 1 },
    "displayName": { "type": "string", "minLength": 1 },
    "role": { "type": "string", "minLength": 1 },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["domains", "decisionScopes", "allowedTools", "prohibitedActions"],
      "properties": {
        "domains": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "decisionScopes": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "allowedTools": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "prohibitedActions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "maxPermissionTier": { "type": "string", "enum": ["draft", "suggest", "execute"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "supervisorId": { "type": "string", "minLength": 1 }
  }
}
