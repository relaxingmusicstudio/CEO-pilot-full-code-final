{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Goal",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "goalId",
    "version",
    "owner",
    "description",
    "successMetrics",
    "createdAt",
    "expiresAt",
    "reviewCadence",
    "status"
  ],
  "properties": {
    "goalId": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "owner": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "id"],
      "properties": {
        "type": { "type": "string", "enum": ["human", "agent"] },
        "id": { "type": "string", "minLength": 1 }
      }
    },
    "description": { "type": "string", "minLength": 1 },
    "successMetrics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["metric", "target", "direction"],
        "properties": {
          "metric": { "type": "string", "minLength": 1 },
          "target": { "type": "string", "minLength": 1 },
          "direction": { "type": "string", "enum": ["increase", "decrease", "maintain"] }
        }
      }
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" },
    "reviewCadence": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["active", "expired", "suspended"] },
    "tags": { "type": "array", "items": { "type": "string" } }
  }
}
