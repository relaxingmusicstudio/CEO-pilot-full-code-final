{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecutionPlan",
  "type": "object",
  "additionalProperties": false,
  "required": ["planId", "objective", "tasks", "createdAt", "source"],
  "properties": {
    "planId": { "type": "string", "minLength": 1 },
    "objective": { "type": "string", "minLength": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "enum": ["planner", "human", "system"] },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["taskId", "description", "intent", "expectedOutcome", "constraints", "requiresApproval"],
        "properties": {
          "taskId": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "intent": { "type": "string", "minLength": 1 },
          "expectedOutcome": { "type": "string", "minLength": 1 },
          "constraints": {
            "type": "array",
            "items": { "type": "string" }
          },
          "requiresApproval": { "type": "boolean" }
        }
      }
    }
  }
}
