{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RoutingPreference",
  "type": "object",
  "additionalProperties": false,
  "required": ["preferenceId", "identityKey", "taskType", "reason", "createdAt", "updatedAt"],
  "properties": {
    "preferenceId": { "type": "string", "minLength": 1 },
    "identityKey": { "type": "string", "minLength": 1 },
    "taskType": { "type": "string", "minLength": 1 },
    "goalId": { "type": "string", "minLength": 1 },
    "minTier": { "type": "string", "enum": ["economy", "standard", "advanced", "frontier"] },
    "maxTier": { "type": "string", "enum": ["economy", "standard", "advanced", "frontier"] },
    "reason": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["active", "disabled"] },
    "lineage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sourceOutcomeIds"],
      "properties": {
        "sourceOutcomeIds": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "timeWindowStart": { "type": "string", "format": "date-time" },
        "timeWindowEnd": { "type": "string", "format": "date-time" },
        "confidenceDecay": { "type": "number", "minimum": 0, "maximum": 1 },
        "reviewBy": { "type": "string", "format": "date-time" }
      }
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" }
  }
}
