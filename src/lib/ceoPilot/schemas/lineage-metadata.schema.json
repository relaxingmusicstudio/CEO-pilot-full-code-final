{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LineageMetadata",
  "type": "object",
  "additionalProperties": false,
  "required": ["sourceOutcomeIds"],
  "properties": {
    "sourceOutcomeIds": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "timeWindowStart": { "type": "string", "format": "date-time" },
    "timeWindowEnd": { "type": "string", "format": "date-time" },
    "confidenceDecay": { "type": "number", "minimum": 0, "maximum": 1 },
    "reviewBy": { "type": "string", "format": "date-time" }
  }
}
