{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CooperationProtocol",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocolId", "type", "fromAgentId", "createdAt", "status", "payload"],
      "properties": {
        "protocolId": { "type": "string", "minLength": 1 },
        "type": { "const": "request-evidence" },
        "fromAgentId": { "type": "string", "minLength": 1 },
        "toAgentId": { "type": "string", "minLength": 1 },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["open", "resolved", "escalated", "expired"] },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["topic", "evidenceNeeded"],
          "properties": {
            "topic": { "type": "string", "minLength": 1 },
            "evidenceNeeded": { "type": "array", "minItems": 1, "items": { "type": "string" } },
            "dueAt": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocolId", "type", "fromAgentId", "createdAt", "status", "payload"],
      "properties": {
        "protocolId": { "type": "string", "minLength": 1 },
        "type": { "const": "request-clarification" },
        "fromAgentId": { "type": "string", "minLength": 1 },
        "toAgentId": { "type": "string", "minLength": 1 },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["open", "resolved", "escalated", "expired"] },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["question"],
          "properties": {
            "question": { "type": "string", "minLength": 1 },
            "context": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocolId", "type", "fromAgentId", "createdAt", "status", "payload"],
      "properties": {
        "protocolId": { "type": "string", "minLength": 1 },
        "type": { "const": "propose-merge" },
        "fromAgentId": { "type": "string", "minLength": 1 },
        "toAgentId": { "type": "string", "minLength": 1 },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["open", "resolved", "escalated", "expired"] },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["proposalIds", "mergedSummary"],
          "properties": {
            "proposalIds": { "type": "array", "minItems": 2, "items": { "type": "string" } },
            "mergedSummary": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocolId", "type", "fromAgentId", "createdAt", "status", "payload"],
      "properties": {
        "protocolId": { "type": "string", "minLength": 1 },
        "type": { "const": "escalate-to-referee" },
        "fromAgentId": { "type": "string", "minLength": 1 },
        "toAgentId": { "type": "string", "minLength": 1 },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["open", "resolved", "escalated", "expired"] },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["disagreementId", "topic", "proposalIds"],
          "properties": {
            "disagreementId": { "type": "string", "minLength": 1 },
            "topic": { "type": "string", "minLength": 1 },
            "proposalIds": { "type": "array", "minItems": 2, "items": { "type": "string" } }
          }
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocolId", "type", "fromAgentId", "createdAt", "status", "payload"],
      "properties": {
        "protocolId": { "type": "string", "minLength": 1 },
        "type": { "const": "escalate-to-human" },
        "fromAgentId": { "type": "string", "minLength": 1 },
        "toAgentId": { "type": "string", "minLength": 1 },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["open", "resolved", "escalated", "expired"] },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["reason"],
          "properties": {
            "reason": { "type": "string", "minLength": 1 },
            "disagreementId": { "type": "string", "minLength": 1 },
            "requiredBy": { "type": "string", "format": "date-time" }
          }
        }
      }
    }
  ]
}
