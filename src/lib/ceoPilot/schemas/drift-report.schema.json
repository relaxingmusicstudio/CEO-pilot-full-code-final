{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DriftReport",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reportId",
    "identityKey",
    "anchorId",
    "anchorVersion",
    "severity",
    "reasons",
    "metrics",
    "window",
    "createdAt"
  ],
  "properties": {
    "reportId": { "type": "string", "minLength": 1 },
    "identityKey": { "type": "string", "minLength": 1 },
    "anchorId": { "type": "string", "minLength": 1 },
    "anchorVersion": { "type": "string", "minLength": 1 },
    "severity": { "type": "string", "enum": ["none", "low", "medium", "high"] },
    "reasons": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "decisionDistribution",
        "routingDistribution",
        "outcomeRates",
        "constraintTrend",
        "weightDrift"
      ],
      "properties": {
        "decisionDistribution": {
          "type": "object",
          "additionalProperties": false,
          "required": ["baseline", "recent", "jsDivergence", "sampleCount"],
          "properties": {
            "baseline": {
              "type": "object",
              "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "recent": {
              "type": "object",
              "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "jsDivergence": { "type": "number", "minimum": 0, "maximum": 1 },
            "sampleCount": { "type": "integer", "minimum": 0 }
          }
        },
        "routingDistribution": {
          "type": "object",
          "additionalProperties": false,
          "required": ["baseline", "recent", "jsDivergence", "sampleCount"],
          "properties": {
            "baseline": {
              "type": "object",
              "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "recent": {
              "type": "object",
              "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "jsDivergence": { "type": "number", "minimum": 0, "maximum": 1 },
            "sampleCount": { "type": "integer", "minimum": 0 }
          }
        },
        "outcomeRates": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "baselineFailureRate",
            "recentFailureRate",
            "deltaFailureRate",
            "baselineRollbackRate",
            "recentRollbackRate",
            "deltaRollbackRate",
            "sampleCount"
          ],
          "properties": {
            "baselineFailureRate": { "type": "number", "minimum": 0, "maximum": 1 },
            "recentFailureRate": { "type": "number", "minimum": 0, "maximum": 1 },
            "deltaFailureRate": { "type": "number" },
            "baselineRollbackRate": { "type": "number", "minimum": 0, "maximum": 1 },
            "recentRollbackRate": { "type": "number", "minimum": 0, "maximum": 1 },
            "deltaRollbackRate": { "type": "number" },
            "sampleCount": { "type": "integer", "minimum": 0 }
          }
        },
        "constraintTrend": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "baselineViolations",
            "recentViolations",
            "violationRateDelta",
            "baselineNearMisses",
            "recentNearMisses",
            "nearMissRateDelta",
            "sampleCount"
          ],
          "properties": {
            "baselineViolations": { "type": "integer", "minimum": 0 },
            "recentViolations": { "type": "integer", "minimum": 0 },
            "violationRateDelta": { "type": "number" },
            "baselineNearMisses": { "type": "integer", "minimum": 0 },
            "recentNearMisses": { "type": "integer", "minimum": 0 },
            "nearMissRateDelta": { "type": "number" },
            "sampleCount": { "type": "integer", "minimum": 0 }
          }
        },
        "weightDrift": {
          "type": "object",
          "additionalProperties": false,
          "required": ["available"],
          "properties": {
            "available": { "type": "boolean" },
            "delta": { "type": "number" },
            "reason": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["baselineStart", "baselineEnd", "recentStart", "recentEnd"],
      "properties": {
        "baselineStart": { "type": "string", "format": "date-time" },
        "baselineEnd": { "type": "string", "format": "date-time" },
        "recentStart": { "type": "string", "format": "date-time" },
        "recentEnd": { "type": "string", "format": "date-time" }
      }
    },
    "createdAt": { "type": "string", "format": "date-time" }
  }
}
