{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DisagreementRecord",
  "type": "object",
  "additionalProperties": false,
  "required": ["disagreementId", "topic", "proposals", "status", "createdAt"],
  "properties": {
    "disagreementId": { "type": "string", "minLength": 1 },
    "topic": { "type": "string", "minLength": 1 },
    "proposals": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "proposalId",
          "agentId",
          "summary",
          "justification",
          "confidence",
          "riskLevel",
          "evidenceRefs",
          "assumptions",
          "unresolvedRisks",
          "impact",
          "createdAt"
        ],
        "properties": {
          "proposalId": { "type": "string", "minLength": 1 },
          "agentId": { "type": "string", "minLength": 1 },
          "summary": { "type": "string", "minLength": 1 },
          "justification": { "type": "string", "minLength": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "riskLevel": { "type": "number", "minimum": 0, "maximum": 1 },
          "evidenceRefs": { "type": "array", "items": { "type": "string" } },
          "assumptions": { "type": "array", "items": { "type": "string" } },
          "unresolvedRisks": { "type": "array", "items": { "type": "string" } },
          "impact": { "type": "string", "enum": ["reversible", "difficult", "irreversible"] },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    },
    "status": { "type": "string", "enum": ["open", "resolved", "escalated"] },
    "createdAt": { "type": "string", "format": "date-time" },
    "refereeDecisionId": { "type": "string", "minLength": 1 }
  }
}
