{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QualityRegressionRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "regressionId",
    "taskType",
    "modelTier",
    "baselineQuality",
    "recentQuality",
    "delta",
    "severity",
    "detectedAt"
  ],
  "properties": {
    "regressionId": { "type": "string", "minLength": 1 },
    "taskType": { "type": "string", "minLength": 1 },
    "modelTier": { "type": "string", "enum": ["economy", "standard", "advanced", "frontier"] },
    "baselineQuality": { "type": "number", "minimum": 0, "maximum": 1 },
    "recentQuality": { "type": "number", "minimum": 0, "maximum": 1 },
    "delta": { "type": "number" },
    "severity": { "type": "string", "enum": ["low", "medium", "high"] },
    "detectedAt": { "type": "string", "format": "date-time" }
  }
}
