{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QualityMetricRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "metricId",
    "taskType",
    "taskClass",
    "modelTier",
    "sampleCount",
    "passRate",
    "avgQuality",
    "avgCostCents",
    "confidence",
    "decayedConfidence",
    "updatedAt"
  ],
  "properties": {
    "metricId": { "type": "string", "minLength": 1 },
    "taskType": { "type": "string", "minLength": 1 },
    "taskClass": { "type": "string", "enum": ["routine", "novel", "high_risk"] },
    "modelTier": { "type": "string", "enum": ["economy", "standard", "advanced", "frontier"] },
    "sampleCount": { "type": "integer", "minimum": 0 },
    "passRate": { "type": "number", "minimum": 0, "maximum": 1 },
    "avgQuality": { "type": "number", "minimum": 0, "maximum": 1 },
    "avgCostCents": { "type": "integer", "minimum": 0 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "decayedConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "windowStart": { "type": "string", "format": "date-time" },
    "windowEnd": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
